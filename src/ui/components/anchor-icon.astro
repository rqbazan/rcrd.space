---
import { cn } from "~/utils/cn";
import { getExternalLinkProps } from "~/utils/get-external-link-props";

interface Props {
  href: string;
  class?: string;
}

const { class: className, href, ...otherProps } = Astro.props;
---

<a
  href={href}
  class={cn(
    "text-muted hover:text-wording transition-colors ease-in-out duration-300",
    className
  )}
  {...getExternalLinkProps(href)}
  {...otherProps}
>
  <slot />
</a>
