---
import type { HTMLAttributes } from "astro/types";
import { getExternalLinkProps } from "~/utils/get-external-link-props";

interface Props extends HTMLAttributes<"a"> {
  href: string;
}

const { href, ...otherProps } = Astro.props;
---

<a
  href={href}
  class="dark:text-blue-400 dark:hover:text-blue-300 text-blue-700 hover:text-blue-600 transition-colors"
  {...getExternalLinkProps(href)}
  {...otherProps}><slot /></a
>
