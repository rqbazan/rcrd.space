---
import "~/ui/globals.css";
import { getJsText } from "@rqbazan/set-initial-color-mode";
import SpeedInsights from "@vercel/speed-insights/astro";
import Footer from "./components/footer.astro";
import Header from "./components/header.astro";
import PostHog from "./components/post-hog.astro";
import SEO from "./components/seo.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <style>
      @view-transition {
        navigation: auto; /* enabled! */
      }
    </style>
    <script is:inline set:html={getJsText()} />

    <SEO title={title} />

    <link
      rel="preload"
      href="/fonts/ibm-plex-sans-var.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <SpeedInsights />

    <PostHog />
  </head>
  <body>
    <section
      class="mx-auto flex min-h-full flex-col px-6 py-8 md:max-w-[42rem] md:px-4 md:py-24"
    >
      <Header class="mb-8" />
      <main>
        <slot />
      </main>
      <Footer class="mt-auto pt-16" />
    </section>
  </body>
</html>
