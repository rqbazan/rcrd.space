{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["simple-import-sort", "unused-imports"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^\\u0000",
            "^react$",
            "^next",
            "^@?\\w",
            "^@",
            "^~",
            "^\\.\\.(?!/?$)",
            "^\\.\\./?$",
            "^\\./(?=.*/)(?!/?$)",
            "^\\.(?!/?$)",
            "^\\./?$",
            "^.+\\.css$"
          ]
        ]
      }
    ],
    "simple-import-sort/exports": "error",
    "unused-imports/no-unused-imports": "error"
  }
}
