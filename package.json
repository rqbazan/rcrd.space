  "license": "MIT",
  "author": {
    "name": "Ricardo Q. Bazan",
    "email": "raquirozbazan@gmail.com",
    "url": "https://sxntixgo.codes"
  },
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "run-p check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --ignore-path .gitignore --write"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals"
    ]
  },
  "dependencies": {
    "@rqbazan/md-to-html": "^0.0.2",
    "@svgr/webpack": "^5.5.0",
    "airtable": "^0.11.1",
    "autoprefixer": "^10.2.6",
    "clsx": "^1.1.1",
    "date-fns": "^2.22.1",
    "lodash.random": "^3.2.0",
    "next": "^11.0.1",
    "next-seo": "^4.26.0",
    "nprogress": "^0.2.0",
    "postcss": "^8.3.5",
    "postcss-nested": "^5.0.5",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-spring": "8.x",
    "remark-external-links": "^8.0.0",
    "tailwindcss": "^2.2.4",
    "use-media": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "eslint": "^7.29.0",
    "eslint-config-next": "^11.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  },
  "engines": {
    "node": "12.x"
  }
}
