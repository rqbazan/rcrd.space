{
  "name": "me",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "author": "Ricardo Alexis Quiroz Bazan <raquirozbazan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "pre-dev": "rm -rf node_modules/.cache .next",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format lint build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "is-mobile": "^2.1.0",
    "next": "^9.1.6",
    "nprogress": "^0.2.0",
    "prism-react-renderer": "^1.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2",
    "react-media": "^1.10.0",
    "tailwindcss": "^1.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@next/bundle-analyzer": "^9.1.6",
    "@zeit/next-css": "^1.0.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.7.2",
    "eslint-config-rqbazan-js": "^0.3.1",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1"
  }
}
